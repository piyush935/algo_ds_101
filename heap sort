#include<stdio.h>

void heapify(int arr[],int n,int i)
{
	int largest=i;
	int l=(2*i)+1;
	int r=(2*i)+2;
	while(l<n&&arr[l]>arr[largest])
		largest=l;
	while(r<n&&arr[r]>arr[largest])
		largest=r;
	
	
	if(largest!=i)
	{
		int temp;
		temp=arr[largest];
		arr[largest]=arr[i];
		arr[i]=temp;
		
		
		heapify(arr,n,largest);
	}
	
}
void heapSort(int arr[],int n)
{int key;
	for(int i=n/2-1;i>=0;i--)
		heapify(arr,n,i);
	for(int i=n-1;i>0;i--)
	{
		
		key=arr[0];
		arr[0]=arr[i];
		arr[i]=key;
		heapify(arr,i,0);
	}
}
void printarray(int arr[],int n)
{
	for(int i=0;i<n;++i)
	
		printf(" %d",arr[i]);
	printf("\n");
}
int main()
{
	int arr[]={15,5,20,1,17,10,30};
	int n=sizeof(arr)/sizeof(arr[0]);
	heapSort(arr,n);
	printarray(arr,n);
}
